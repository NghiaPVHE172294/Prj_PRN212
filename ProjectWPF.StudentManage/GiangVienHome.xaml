<Window x:Class="ProjectWPF.StudentManage.GiangVienHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF.StudentManage"
        mc:Ignorable="d"
        Title="GiangVienHome" Height="450" Width="800">
    <DockPanel>
        <!-- MENU BAR -->
        <Menu DockPanel.Dock="Top">
            <!-- Spacer -->
            <MenuItem Header="" IsEnabled="False" Width="Auto">
                <MenuItem.Template>
                    <ControlTemplate>
                        <Grid Width="Auto"/>
                    </ControlTemplate>
                </MenuItem.Template>
            </MenuItem>
            <MenuItem Header="Đăng xuất" HorizontalAlignment="Right" Click="DangXuat_Click"/>
        </Menu>

        <!-- KHUNG GIAO DIỆN CHÍNH -->
        <Border CornerRadius="16" Background="#F4F8FB" Padding="0" BorderBrush="#2196F3" BorderThickness="2" Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,20">
                <TextBlock Text="TRANG CHỦ GIẢNG VIÊN" FontSize="26" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,30" HorizontalAlignment="Center"/>
                <Button Content="Xem Thông Tin Cá Nhân" Width="240" Height="44" Margin="10" Click="XemThongTin_Click"/>
                <Button Content="Xem Môn" Width="240" Height="44" Margin="10" Click="XemMon_Click"/>
                <Button Content="Nhập điểm" Width="240" Height="44" Margin="10" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
